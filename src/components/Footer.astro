---
import { Picture } from "astro:assets";
import logo from "../assets/md-full.png";

const currentYear = new Date().getFullYear();

const links = [
  { label: "Inicio", href: "/" },
  { label: "Servicios", href: "#skills" },
  { label: "Proceso", href: "#process" },
  { label: "Productos", href: "#products" },
];

const socials = [
  {
    label: "GitHub",
    href: "https://github.com/molecula-digital",
    icon: `<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />`,
  },
];
---

<footer class="bg-cream px-4 md:px-8 py-4">
  <div
    class="bg-black text-white rounded-3xl max-w-6xl mx-auto px-6 md:px-10 py-10 md:py-12"
  >
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-6">
      <!-- Brand -->
      <div class="md:col-span-2">
        <Picture
          class="h-10 object-contain brightness-0 invert mb-4"
          src={logo}
          alt="Molecula Digital Logo"
        />
        <p class="text-primary-200 text-sm max-w-sm mb-6">
          Productos digitales inteligentes que transforman la manera en que
          trabajas.
        </p>
        <div class="flex gap-4">
          {
            socials.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-white/10 hover:bg-md-green rounded-lg flex items-center justify-center transition-colors"
                aria-label={social.label}
              >
                <svg
                  class="w-5 h-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <Fragment set:html={social.icon} />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Links -->
      <div>
        <h4 class="font-semibold text-white mb-4">Enlaces</h4>
        <ul class="space-y-3">
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-primary-200 hover:text-white transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold text-white mb-4">Contacto</h4>
        <ul class="space-y-3 text-sm">
          <li>
            <a
              href="mailto:alfonso@molecula.digital"
              class="text-primary-200 hover:text-white transition-colors"
            >
              alfonso@molecula.digital
            </a>
          </li>
          <li class="text-primary-200">CuliacÃ¡n, Sinaloa</li>
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div
      class="border-t border-white/10 mt-8 pt-6 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-gray-400 text-sm">
        &copy; {currentYear} Software Labs MD S.A.S. Todos los derechos reservados.
      </p>
      <p class="text-gray-500 text-xs">Hecho con chocomilk y amor ðŸ¥°</p>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: #f6f3ec;
  }
</style>
