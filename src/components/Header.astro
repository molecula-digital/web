---
import { Picture } from "astro:assets";
import logo from "../assets/md-full-alt.png";
import { MobileNav } from "./react/MobileNav";

const navLinks = [
  { label: "Servicios", href: "/#skills" },
  { label: "Proceso", href: "/#process" },
  { label: "Productos", href: "/#products" },
  { label: "Blog", href: "/blog" },
];
---

<header>
  <!-- Ribbon -->
  <div class="bg-black text-white text-center text-xs font-medium py-2">
    Soluciones de tecnología para empresas y emprendedores
  </div>

  <nav
    id="navigation-menu"
    aria-label="Menú principal"
    class="bg-cream w-full py-3"
  >
    <!-- Desktop -->
    <div class="hidden md:flex max-w-6xl mx-auto px-4 md:px-8 items-center justify-between">
      <a href="/" aria-label="Ir al inicio" class="hover:drop-shadow-md transition-all duration-300">
        <Picture
          class="h-10 w-auto drop-shadow-sm"
          widths={[300, 600, 900]}
          src={logo}
          alt="Logo Molecula Digital"
          loading="eager"
        />
      </a>
      <ul class="flex items-center gap-6">
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm font-medium text-primary-800 hover:text-md-green transition-colors relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-0 after:bg-md-green after:transition-all after:duration-300 hover:after:w-full"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Mobile -->
    <div class="md:hidden flex items-center justify-center px-4 relative">
      <a href="/" aria-label="Ir al inicio" class="hover:drop-shadow-md transition-all duration-300">
        <Picture
          class="h-10 w-auto drop-shadow-sm"
          widths={[300, 600, 900]}
          src={logo}
          alt="Logo Molecula Digital"
          loading="eager"
        />
      </a>
      <div class="absolute right-4">
        <MobileNav client:load links={navLinks} />
      </div>
    </div>
  </nav>
</header>
