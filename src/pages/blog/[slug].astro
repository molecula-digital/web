---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Container from "../../components/Container.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => data.published);
  return posts.map((post) => ({
    params: { slug: post.id.replace(/\.(md|mdx)$/, "") },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const slug = post.id.replace(/\.(md|mdx)$/, "");

const dateFormat = new Intl.DateTimeFormat("es-MX", {
  day: "numeric",
  month: "long",
  year: "numeric",
});

const publishDate = new Date(post.data.publishDate);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.data.title,
  description: post.data.description,
  datePublished: publishDate.toISOString(),
  ...(post.data.updatedDate && { dateModified: post.data.updatedDate }),
  author: {
    "@type": "Organization",
    name: post.data.author || "Molecula Digital",
    url: "https://molecula.digital",
  },
  publisher: {
    "@type": "Organization",
    name: "Molecula Digital",
    url: "https://molecula.digital",
    logo: {
      "@type": "ImageObject",
      url: "https://molecula.digital/share.png",
    },
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": `https://molecula.digital/blog/${slug}/`,
  },
  inLanguage: "es-MX",
  ...(post.data.tags.length > 0 && { keywords: post.data.tags.join(", ") }),
};
---

<BaseLayout
  title={`${post.data.title} â€” Molecula Digital`}
  description={post.data.description}
  type="article"
  publishDate={publishDate}
  updatedDate={post.data.updatedDate}
  structuredData={structuredData}
>
  <article class="py-12 md:py-20 px-4 md:px-8">
    <Container>
      <div class="max-w-3xl mx-auto">
        <!-- Breadcrumb -->
        <nav aria-label="Breadcrumb" class="mb-8">
          <ol class="flex items-center gap-2 text-sm text-gray-500">
            <li><a href="/" class="hover:text-primary-800 transition-colors">Inicio</a></li>
            <li aria-hidden="true">/</li>
            <li><a href="/blog" class="hover:text-primary-800 transition-colors">Blog</a></li>
            <li aria-hidden="true">/</li>
            <li class="text-primary-800 font-medium truncate">{post.data.title}</li>
          </ol>
        </nav>

        <!-- Header -->
        <header class="mb-10">
          {
            post.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-4">
                {post.data.tags.map((tag: string) => (
                  <span class="inline-block px-3 py-1 bg-eucalyptus-100 text-eucalyptus-700 text-xs font-semibold rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )
          }
          <h1
            class="font-display text-3xl md:text-5xl font-bold text-primary-800 mb-4 leading-tight"
          >
            {post.data.title}
          </h1>
          <p class="text-lg text-gray-600 mb-6">{post.data.description}</p>
          <div class="flex items-center gap-4 text-sm text-gray-500">
            <time datetime={publishDate.toISOString()}>
              {dateFormat.format(publishDate)}
            </time>
            {
              post.data.updatedDate && (
                <span>
                  &middot; Actualizado: {post.data.updatedDate}
                </span>
              )
            }
            <span>&middot; {post.data.author || "Molecula Digital"}</span>
          </div>
        </header>

        <!-- Content -->
        <div
          class="prose prose-lg max-w-none
          prose-headings:font-display prose-headings:text-primary-800
          prose-h2:text-2xl prose-h2:md:text-3xl prose-h2:mt-12 prose-h2:mb-4
          prose-h3:text-xl prose-h3:md:text-2xl prose-h3:mt-8 prose-h3:mb-3
          prose-p:text-gray-700 prose-p:leading-relaxed
          prose-a:text-md-green prose-a:font-medium prose-a:no-underline hover:prose-a:underline
          prose-strong:text-primary-800
          prose-li:text-gray-700
          prose-blockquote:border-md-green prose-blockquote:text-gray-600
          prose-code:text-eucalyptus-700 prose-code:bg-eucalyptus-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded
          prose-pre:bg-primary-800 prose-pre:text-primary-100
          prose-img:rounded-xl prose-img:shadow-md"
        >
          <Content />
        </div>

        <!-- Back to blog -->
        <div class="mt-16 pt-8 border-t border-primary-200">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-md-green font-medium hover:underline"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            Volver al blog
          </a>
        </div>
      </div>
    </Container>
  </article>
</BaseLayout>
