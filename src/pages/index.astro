---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Skills from "../components/Skills.astro";
import UseCases from "../components/UseCases.astro";
import BigPromise from "../components/BigPromise.astro";
import Process from "../components/Process.astro";
import FAQ from "../components/FAQ.astro";
import CTA from "../components/CTA.astro";
import Showcase from "../components/Showcase.astro";
import RecentPosts from "../components/RecentPosts.astro";
import { faqs } from "../data/faqs";

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      name: "Molecula Digital",
      url: "https://molecula.digital",
      logo: "https://molecula.digital/share.png",
      description:
        "Integramos inteligencia artificial en tus procesos para que tu equipo se enfoque en lo que importa.",
      address: {
        "@type": "PostalAddress",
        addressLocality: "Culiacán",
        addressRegion: "Sinaloa",
        addressCountry: "MX",
      },
      contactPoint: {
        "@type": "ContactPoint",
        email: "alfonso@molecula.digital",
        contactType: "sales",
        availableLanguage: "Spanish",
      },
      sameAs: ["https://github.com/molecula-digital"],
    },
    {
      "@type": "WebSite",
      name: "Molecula Digital",
      url: "https://molecula.digital",
      inLanguage: "es-MX",
    },
    {
      "@type": "FAQPage",
      mainEntity: faqs.map((faq) => ({
        "@type": "Question",
        name: faq.question,
        acceptedAnswer: {
          "@type": "Answer",
          text: faq.answer,
        },
      })),
    },
  ],
};
---

<BaseLayout structuredData={structuredData}>
  <Hero />
  <Skills />
  <UseCases />
  <BigPromise />
  <Process />
  <Showcase client:visible />
  <FAQ client:visible />
  <RecentPosts />
  <CTA
    client:visible
    title="¿Listo para el siguiente paso?"
    subtitle="Agenda una llamada de 30 minutos. Te mostramos qué es posible y cómo empezar."
    email="alfonso@molecula.digital"
    buttonText="Escríbenos"
  />
</BaseLayout>
